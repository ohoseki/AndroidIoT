<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Controle IoT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="30sp"
            android:textStyle="bold"/>
    <Button
            android:text="Controle de Iluminação"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoIluminacao" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="Sair"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoSair"
            app:layout_constraintEnd_toEndOf="@+id/botaoTemperatura"
            app:layout_constraintStart_toStartOf="@+id/botaoTemperatura" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/botaoTemperatura"/>
    <Button
            android:text="Controle de Temperatura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/botaoTemperatura" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/botaoIluminacao" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/botaoSair"
            app:layout_constraintStart_toStartOf="@+id/botaoIluminacao"
            app:layout_constraintEnd_toEndOf="@+id/botaoIluminacao" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.135"/>
</androidx.constraintlayout.widget.ConstraintLayout>